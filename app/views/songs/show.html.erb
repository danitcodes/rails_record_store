<h1>Song: <%= @song.name %></h1>
<h2>Album: <%= @album.name %></h2>
<h3><%= @song.lyrics %></h3>

<% if @album.songs.any? %>
  <h4>Here are the songs for this album:</h4>

  <% @album.songs.each do |song| %>
    <ul>
      <li>
        <%= link_to song.name, album_song_path(@album, song) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No songs are listed for this album.</p>
<% end %>

<%= button_to "Edit Song", edit_album_song_path(@album, @song), method: :get %>
<%= button_to "Delete Song", album_song_path(@album, @song), method: :delete %>
<%= button_to "Return to Album", album_path(@album), method: :get %>
